<Window x:Class="Epossible_User_Manager.Reset_Pass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Epossible_User_Manager"
        mc:Ignorable="d"
        Title="Reset_Pass" Height="450" Width="800">
    <Grid>
        <Label Content="Reset Password (Password complexity requires at least 8 characters with one uppercase letter, one lowercase letter, one&#xD;&#xA;number, and a special character)&#xD;&#xA;" HorizontalAlignment="Left" Margin="70,50,0,0" VerticalAlignment="Top" Width="660"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="70,127,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="202,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="70,185,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="202,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="70,259,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
